@model List<ResultBlogDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<div class="card admin-card">

    <div class="admin-header d-flex justify-content-between align-items-center">
        <h4 class="fw-bold mb-0">Bloglar</h4>
        <a href="/Admin/Blog/CreateBlog/" class="btn btn-light text-dark fw-semibold">
            <i class="bi bi-plus-circle me-1"></i> Yeni Blog
        </a>
    </div>

    <div class="admin-table">
        <div class="table-responsive">
            <table class="table table-borderless align-middle text-nowrap">
                <thead class="fw-semibold text-secondary">
                    <tr>
                        <th>#</th>
                        <th>Blog</th>
                        <th>Kategori</th>
                        <th>Durumu</th>
                        <th class="text-center">İşlemler</th>
                   
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        string statusClass = item.Status switch
                        {
                            BlogStatus.Accepted => "bg-success text-white",
                            BlogStatus.Pending => "bg-warning text-dark",
                            BlogStatus.Rejected => "bg-danger text-white",
                            _ => "bg-secondary text-white"
                        };

                        <tr class="align-middle">
                            <td><strong>@count</strong></td>

                            <td class="d-flex align-items-center">
                                <img src="@item.CoverImage" class="blog-img" />
                                <span>@(item.Title?.Length > 25 ? item.Title.Substring(0, 25) + "..." : item.Title)</span>
                            </td>

                            <td>@item.Category.CategoryName</td>

                            <td>
                                <span class="status-badge @statusClass">
                                    <i class="bi bi-circle-fill"></i> @item.Status.GetDisplayName()
                                </span>
                            </td>
                            <td>
                                <form asp-action="ChangeStatus" method="post" class="d-flex align-items-center gap-2">

                                    <input type="hidden" name="id" value="@item.Id" />
                                    <select name="newStatus" class="form-select form-select-sm w-auto shadow-sm rounded-3" style="border: 1px solid #d1d5db;">
                                        @foreach (var status in Enum.GetValues(typeof(BlogStatus)).Cast<BlogStatus>())
                                        {
                                            var isSelected = item.Status == status;
                                            <option value="@((int)status)" selected="@(isSelected ? "selected" : null)">
                                                @status.GetDisplayName()
                                            </option>
                                        }
                                    </select>

                                    <button type="submit" class="btn btn-primary btn-sm rounded-3 shadow-sm" style="padding: 6px 10px;">
                                        <i class="bi bi-arrow-repeat"></i>
                                    </button>

                                </form>
                            </td>
                      
                            <td class="text-center">
                                <button type="button" onclick="confirmDelete('/Admin/Blog/DeleteBlog/@item.Id')" class="btn btn-danger btn-circle">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>

                            <td class="text-center">
                                <a href="/Admin/Blog/UpdateBlog/@item.Id" class="btn btn-primary btn-circle">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>

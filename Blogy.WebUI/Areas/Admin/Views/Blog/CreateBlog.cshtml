@model CreateBlogDto
@{
    ViewData["Title"] = "CreateBlog";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Yeni Blog Oluştur</h5>
                </div>
              
                <form method="post">
                    <div class="form-group mb-3">
                        <input type="text" asp-for="Title" class="form-control" placeholder="Başlık Giriniz"/>
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group mb-3">
                        <textarea type="text" asp-for="Description" class="form-control" placeholder="Açıklama Giriniz" rows="8" ></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group mb-3">
                        <input type="text" asp-for="CoverImage" class="form-control" placeholder="Kapak Resmi Url Giriniz" />
                        <span class="text-danger" asp-validation-for="CoverImage"></span>
                    </div>
                    <div class="form-group mb-3">
                        <input type="text" asp-for="BlogImage1" class="form-control" placeholder="Blog Resmi1 Url Giriniz" />
                        <span class="text-danger" asp-validation-for="BlogImage1"></span>
                    </div>
                    <div class="form-group mb-3">
                        <input type="text" asp-for="BlogImage2" class="form-control" placeholder="Blog Resmi2 Url Giriniz" />
                        <span class="text-danger" asp-validation-for="BlogImage2"></span>
                    </div>
                    <div class="form-group mb-3">
                        <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.categories">
                            <option value="" selected>Kategori Seçiniz</option>
                        </select>
                        <span class="text-danger" asp-validation-for="CategoryId"></span>
                    </div>
                    <button class="btn btn-info">Blog Oluştur</button>
                </form>
            </div>
        </div>
    </div>
</div>

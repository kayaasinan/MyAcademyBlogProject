@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<div class="role-card">

    <div class="role-header d-flex justify-content-between align-items-center">
        <h4 class="fw-bold mb-0">
            <i class="bi bi-people-fill me-2"></i> Rol Listesi
        </h4>

        <a href="/Admin/Role/CreateRole/" class="btn btn-light text-dark fw-semibold">
            <i class="bi bi-plus-circle me-1"></i> Yeni Rol
        </a>
    </div>

    <div class="role-table">
        <div class="table-responsive">
            <table class="table table-borderless align-middle text-nowrap">
                <thead class="fw-semibold text-secondary">
                    <tr>
                        <th>#</th>
                        <th>Rol Adı</th>
                        <th class="text-center">Sil</th>
                        <th class="text-center">Güncelle</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;

                        <tr>
                            <td><strong>@count</strong></td>
                            <td>@item.Name</td>

                            <td class="text-center">
                                <button type="button" onclick="confirmDelete('/Admin/Role/DeleteRole/@item.Id')" class="btn btn-danger btn-circle">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            </td>

                            <td class="text-center">
                                <a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-primary btn-circle">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

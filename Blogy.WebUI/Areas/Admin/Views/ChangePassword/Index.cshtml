@model ChangePasswordDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}


<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-4">

         
                <div class="text-center mb-4">
                    <i class="bi bi-shield-lock-fill" style="font-size: 50px; color:#5A67D8;"></i>
                    <h4 class="fw-bold mt-3">Şifre Yenileme</h4>
                    <p class="text-muted mb-0">Lütfen hesabınızı korumak için güçlü bir şifre belirleyin.</p>
                </div>

                <form method="post">

                    <div class="input-group mb-3">
                        <span class="input-group-text bg-light"><i class="bi bi-key"></i></span>
                        <input type="password" asp-for="CurrentPassword" class="form-control" placeholder="Mevcut Şifre" />
                    </div>

           
                    <div class="input-group mb-3">
                        <span class="input-group-text bg-light"><i class="bi bi-shield-lock"></i></span>
                        <input type="password" asp-for="NewPassword" class="form-control" placeholder="Yeni Şifre" id="newPassword" />
                    </div>

                    <div class="progress mb-3" style="height: 6px;">
                        <div id="passwordStrength" class="progress-bar"></div>
                    </div>


                    <div class="input-group mb-3">
                        <span class="input-group-text bg-light"><i class="bi bi-shield-check"></i></span>
                        <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Yeni Şifre (Tekrar)" />
                    </div>

            
                    <div class="mb-3">
                        <span class="text-danger">@Html.ValidationSummary()</span>
                    </div>

              
                    <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold">
                        <i class="bi bi-arrow-repeat me-1"></i> Şifreyi Güncelle
                    </button>

                </form>
            </div>
        </div>
    </div>
</div>


<script>
    document.getElementById("newPassword").addEventListener("input", function () {
        var val = this.value.length;
        var bar = document.getElementById('passwordStrength');

        if (val === 0) {
            bar.style.width = "0%";
            bar.className = "progress-bar";
        }
        else if (val < 4) {
            bar.style.width = "25%";
            bar.className = "progress-bar bg-danger";
        }
        else if (val < 7) {
            bar.style.width = "55%";
            bar.className = "progress-bar bg-warning";
        }
        else {
            bar.style.width = "100%";
            bar.className = "progress-bar bg-success";
        }
    });
</script>

@model UpdateSocialDto
@{
    ViewData["Title"] = "UpdateSocial";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Sosyal Medya Güncelle</h5>
                </div>

                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group mb-3">
                        <input type="text" asp-for="Name" class="form-control" placeholder="Sosyal Medya Adını Giriniz" />
                    </div>
                    <div class="form-group mb-3">
                        <input type="text" asp-for="Url" class="form-control" placeholder="Sosyal Medya Url Giriniz" />
                    </div>
                    <div class="form-group mb-3">
                        <input type="text" asp-for="Icon" class="form-control" placeholder="Sosyal Medya İkon Giriniz" />
                    </div>
                    <button class="btn btn-info">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>




@model List<ResultUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<div class="user-card">

    <div class="user-header d-flex justify-content-between align-items-center">
        <h4 class="fw-bold mb-0">
            <i class="bi bi-people-fill me-2"></i> Kullanıcı Listesi
        </h4>
        <a href="/Admin/Category/CreateCategory/" class="btn btn-light text-dark fw-semibold">
            <i class="bi bi-plus-circle me-1"></i> Yeni Kategori
        </a>
    </div>

    <div class="user-table">
        <div class="table-responsive">
            <table class="table table-borderless align-middle text-nowrap">
                <thead class="fw-semibold text-secondary">
                    <tr>
                        <th>#</th>
                        <th>Profil</th>
                        <th>Ad Soyad</th>
                        <th>Kullanıcı Adı</th>
                        <th>Email</th>
                        <th>Roller</th>
                        <th class="text-center">Rol Ata</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;

                        <tr>
                            <td><strong>@count</strong></td>

                            <td>
                                <img src="@item.ImageUrl" class="user-img" />
                            </td>
                            <td>@item.FullName</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>
                                @foreach (var role in item.Roles)
                                {
                                    <span class="badge bg-primary me-1">@role</span>
                                }
                            </td>

                            <td class="text-center">
                                <a href="/Admin/Users/AssingRole/@item.Id" class="btn btn-outline-primary btn-small">
                                    <i class="bi bi-shield-check me-1"></i> Ata
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

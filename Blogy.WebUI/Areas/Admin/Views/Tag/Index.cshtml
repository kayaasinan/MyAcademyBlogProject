@model List<ResultTagDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<div class="tags-card">

    <div class="tags-header d-flex justify-content-between align-items-center">
        <h4 class="fw-bold mb-0">
            <i class="bi bi-tags-fill me-2"></i> Etiketler
        </h4>
        <a href="/Admin/Tag/CreateTag" class="btn btn-light text-dark fw-semibold">
            <i class="bi bi-plus-circle me-1"></i> Yeni Etiket
        </a>
    </div>
    <div class="tags-wrapper">
        @foreach (var item in Model)
        {
            <a href="/Admin/Tag/UpdateTag/@item.Id" class="tag-item @item.TagColor">
                @item.Name
            </a>
        }
    </div>

</div>

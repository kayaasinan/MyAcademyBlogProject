@model List<ResultTagDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-semibold mb-4">Etiketler</h5>

        <div class="d-flex flex-wrap gap-2 p-2">
            @foreach (var item in Model)
            {
                <button type="button" class="@item.TagColor btn">@item.Name</button>
            }
        </div>
    </div>
</div>
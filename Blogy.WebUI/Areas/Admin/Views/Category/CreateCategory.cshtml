@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Yeni Kategori Oluştur</h5>
                </div>
                <form method="post">
                    <input type="text" asp-for="Name" class="form-control" placeholder="Lütfen eklemek istediğiniz kategori adını giriniz...!" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                    <br />
                    <button class="btn btn-primary">Kategori Ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>

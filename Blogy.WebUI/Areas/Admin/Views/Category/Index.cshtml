
@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<h1>Kategoriler</h1>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>
    @foreach(var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.CategoryName</td>
            <td><a href="Admin/Category/DeleteCategory/@item.Id" class="btn btn-danger"></a>Sil</td>
            <td><a href="Admin/Category/UpdateCategory/@item.Id" class="btn btn-info"></a>Güncelle</td>
        </tr>
    }

</table>
<a href="/Admin/Category/CreateCategory/" class="btn btn-primary">Yeni Kategori Oluştur</a>
@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<div class="category-header d-flex justify-content-between align-items-center">
    <div>
        <h4 class="fw-bold mb-0">Kategoriler</h4>
    </div>

    <a href="/Admin/Category/CreateCategory/" class="btn btn-light text-dark fw-semibold">
        <i class="bi bi-plus-circle me-1"></i> Yeni Kategori
    </a>
</div>

<div class="card category-card">
    <div class="card-body p-4">
        <div class="table-responsive category-table">
            <table class="table align-middle text-nowrap">
                <thead class="fw-semibold text-secondary">
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th style="text-align: center">Sil</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr class="mb-2">
                            <td><span class="category-index">@count</span></td>
                            <td class="fw-semibold">@item.CategoryName</td>
                            <td class="text-center">
                                <button type="button" onclick="confirmDelete('/Admin/Category/DeleteCategory/@item.Id')" class="delete-btn border-0 text-white">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

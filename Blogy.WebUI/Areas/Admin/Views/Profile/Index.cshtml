@model EditProfileDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
}

<div class="card shadow-sm border-0 rounded-3">
    <div class="card-header bg-gradient-primary text-white text-center">
        <h4 class="mb-0 fw-bold">Profil Bilgilerini Güncelle</h4>
    </div>

    <div class="card-body p-4">
        <form method="post" enctype="multipart/form-data">
 
            <div class="text-center mb-4">
                <label class="form-label fw-semibold d-block mb-2">Profil Resmi</label>
                <img src="@Model.ImageUrl" alt="Profil Resmi" class="rounded-circle border"  style="width:150px; height:150px; object-fit:cover;">
            </div>
            <div class="row">
                <div class="col-md-12">
                    <label>Hakkımda</label>
                    <textarea asp-for="Description" class="form-control mb-3" rows="10"></textarea>

                </div>
                <div class="col-md-6">
                    <label>Ad</label>
                    <input type="text" asp-for="FirstName" class="form-control mb-3" required />

                    <label>Soyad</label>
                    <input type="text" asp-for="LastName" class="form-control mb-3" required />

                    <label>Kullanıcı Adı</label>
                    <input type="text" asp-for="UserName" class="form-control mb-3" required />

                    <label>Profil Resmi Güncelle</label>
                    <input type="file" asp-for="ImageFile" class="form-control mb-3" />
                </div>

       
                <div class="col-md-6">
                    <label>Email</label>
                    <input type="email" asp-for="Email" class="form-control mb-3" required />

                    <label>Unvan</label>
                    <input type="text" asp-for="Title" class="form-control mb-3" />

                    <label>Telefon Numarası</label>
                    <input type="text" asp-for="PhoneNumber" class="form-control mb-3" />

                    <label>Mevcut Şifre</label>
                    <input type="password" asp-for="CurrentPassword" class="form-control mb-3" placeholder="Bilgileri güncellemek için lütfen şifrenizi giriniz...!" required />
                </div>
            </div>

            <input type="hidden" asp-for="ImageUrl" />

     
            <div class="mt-3">
                <span class="text-danger">@Html.ValidationSummary()</span>
                <button type="submit" class="btn btn-outline-dark w-100 fw-semibold">
                    Bilgileri Güncelle
                </button>
            </div>
        </form>
    </div>
</div>




@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}


<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Yorumlar</h5>
                </div>
                <div class="table-responsive" data-simplebar>
                    <table class="table table-borderless align-middle text-nowrap">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Yorum</th>
                                <th style="text-align: center">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th>@count</th>
                                    <td>@(item.Content?.Length > 100 ? item.Content.Substring(0, 25) + "..." : item.Content)</td>
                                    <td class="text-center">
                                        <button type="button" onclick="confirmDelete('/Admin/Comment/DeleteComment/@item.Id')" class="btn btn-danger"><i class="fa fa-trash"></i></button>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="mb-4">
    <a href="/Admin/Comment/CreateComment/" class="btn btn-primary">Yeni Yorum Oluştur</a>
</div>





@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/MemberLayout/Layout.cshtml";
    int count = 0;
}


<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Bloglar</h5>
                </div>
                <div class="table-responsive">
                    <table class="table table-borderless align-middle text-nowrap">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Blog Resmi</th>
                                <th>Yorum</th>
                                <th>Blog Başlığı</th>
                                <th>Durum</th>
                                <th>Tarih</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th>@count</th>
                                    <td>
                                        <img src="@item.Blog.CoverImage" style="height:75px;width:75px" />
                                    </td>
                                    <td>@(item.Content?.Length > 25 ? item.Content.Substring(0, 25) + "..." : item.Content)</td>
                                    <td>@item.Blog.Title</td>
                                    <td>@item.Blog.Status.GetDisplayName()</td>
                                    <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>



@using Blogy.Business.DTOs.ContactUsDtos
@model CreateContactUsDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="hero overlay inner-page bg-primary py-5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center pt-5">
            <div class="col-lg-6">
                <h1 class="heading text-white mb-3" data-aos="fade-up">Bize Yazın</h1>
            </div>
        </div>
    </div>
</div>

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 mb-5 mb-lg-0" data-aos="fade-up" data-aos-delay="100">
                <div class="contact-info">

                    <div class="address mt-2">
                        <i class="icon-room"></i>
                        <h4 class="mb-2">Konum:</h4>
                        <p>Kadıköy,<br> İstanbul</p>
                    </div>



                    <div class="email mt-4">
                        <i class="icon-envelope"></i>
                        <h4 class="mb-2">Email:</h4>
                        <p>kayaasinan@gmail.com</p>
                    </div>

                    <div class="phone mt-4">
                        <i class="icon-phone"></i>
                        <h4 class="mb-2">Telefon:</h4>
                        <p>+90 530 000 6060</p>
                    </div>

                </div>
            </div>

            <div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">

                <div class="border rounded bg-white shadow-sm mb-3">
                    <div class="p-3 border-bottom bg-primary text-white rounded-top">
                        <strong>🤖 Blogy Yapay Zekâ Asistanı</strong>
                        <div style="font-size: 13px; opacity: .8;">Sorunuzu yazın, hemen cevaplayayım</div>
                    </div>

                    <div id="chatBox" class="p-3"
                         style="height: 360px; overflow-y: auto; background: #f8f9fa;">
                    </div>
                </div>
                <div class="input-group shadow-sm">
                    <input type="text" id="chatInput" class="form-control border-0" placeholder="Mesajınızı yazın...">
                    <button id="sendBtn" class="btn btn-primary px-4">Gönder</button>
                </div>

            </div>
        </div>
    </div>
</div>



@using Blogy.Business.DTOs.ContactUsDtos
@model CreateContactUsDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="hero overlay inner-page bg-primary py-5">
	<div class="container">
		<div class="row align-items-center justify-content-center text-center pt-5">
			<div class="col-lg-6">
				<h1 class="heading text-white mb-3" data-aos="fade-up">Bize Yazın</h1>
			</div>
		</div>
	</div>
</div>

<div class="section">
	<div class="container">
		<div class="row">
			<div class="col-lg-4 mb-5 mb-lg-0" data-aos="fade-up" data-aos-delay="100">
				<div class="contact-info">

					<div class="address mt-2">
						<i class="icon-room"></i>
						<h4 class="mb-2">Konum:</h4>
						<p>Kadıköy,<br> İstanbul</p>
					</div>

				

					<div class="email mt-4">
						<i class="icon-envelope"></i>
						<h4 class="mb-2">Email:</h4>
						<p>kayaasinan@gmail.com</p>
					</div>

					<div class="phone mt-4">
						<i class="icon-phone"></i>
						<h4 class="mb-2">Telefon:</h4>
						<p>+90 530 000 6060</p>
					</div>

				</div>
			</div>
			<div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">
				<form method="post">
					<div class="row">
						<div class="col-6 mb-3">
							<input type="text" asp-for="FullName" class="form-control" placeholder="Ad Soyad">
							<span class="text-danger" asp-validation-for="FullName"></span>
						</div>
						<div class="col-6 mb-3">
							<input type="email" asp-for="Email" class="form-control" placeholder="Email">
							<span class="text-danger" asp-validation-for="Email"></span>
						</div>
						<div class="col-12 mb-3">
							<input type="text" asp-for="Subject" class="form-control" placeholder="Konu">
							<span class="text-danger" asp-validation-for="Subject"></span>
						</div>
						<div class="col-12 mb-3">
							<textarea cols="30" rows="7" asp-for="Body" class="form-control" placeholder="Mesajınız"></textarea>
							<span class="text-danger" asp-validation-for="Body"></span>
						</div>

						<div class="col-12">
							<button type="submit" class="btn btn-primary">Gönder</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


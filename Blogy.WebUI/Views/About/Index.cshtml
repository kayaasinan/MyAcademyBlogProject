
@model ResultAboutDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('@Model.ImageUrl2');">
	<div class="container">
		<div class="row same-height justify-content-center">
			<div class="col-md-6">
				<div class="post-entry text-center">
					<h1 class="mb-4">@Model.Title</h1>
				</div>
			</div>
        </div>
	</div>
</div>

<div class="section sec-halfs py-0">
	<div class="container">
		<div class="half-content d-lg-flex align-items-stretch">
			<div class="img" style="background-image: url('@Model.ImageUrl2')" data-aos="fade-in">
			</div>
			<div class="text">
				<h2 class="heading text-primary mb-3">Yapay zeka ile bizi tanıyın..</h2>
				<p class="mb-4">@Model.Description1</p>
				<a href="javascript:void(0)" onclick="openAiAbout()" class="btn btn-outline-primary py-2">
					Hemen Dene
				</a>
			</div>
		</div>

		<div class="half-content d-lg-flex align-items-stretch">
			<div class="img order-md-2" style="background-image: url('@Model.ImageUrl1')" data-aos="fade-in">
			</div>
			<div class="text">
				<h2 class="heading text-primary mb-3">Neler yapıyoruz?</h2>
				<p class="mb-4">@Model.Description2</p>
				<p><a href="#" class="btn btn-outline-primary py-2">Devamını Oku</a></p>
			</div>
		</div>
	</div>
</div>





<div class="modal fade" id="aiAboutModal" tabindex="-1">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">

			<div class="modal-header">
				<h5 class="modal-title">Yapay Zekâ ile Blogy</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
			</div>

			<div class="modal-body">
				<div id="ai-loading" class="text-center py-4">
					<div class="spinner-border text-primary" role="status"></div>
					<p class="mt-3">Yükleniyor...</p>
				</div>

				<div id="ai-result" style="display:none; font-size: 17px; line-height: 1.5;"></div>
			</div>

		</div>
	</div>
</div>

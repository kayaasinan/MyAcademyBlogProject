@model AboutTeamDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('@Model.About.ImageUrl2');">
	<div class="container">
		<div class="row same-height justify-content-center">
			<div class="col-md-6">
				<div class="post-entry text-center">
					<h1 class="mb-4">@Model.About.Title</h1>
				</div>
			</div>
        </div>
	</div>
</div>

<div class="section sec-halfs py-0">
	<div class="container">
		<div class="half-content d-lg-flex align-items-stretch">
			<div class="img" style="background-image: url('@Model.About.ImageUrl2')" data-aos="fade-in">
			</div>
			<div class="text">
				<h2 class="heading text-primary mb-3">Yapay zeka ile bizi tanıyın..</h2>
				<p class="mb-4">@Model.About.Description1</p>
				<a href="javascript:void(0)" onclick="openAiAbout()" class="btn btn-outline-primary py-2">
					Hemen Dene
				</a>
			</div>
		</div>

		<div class="half-content d-lg-flex align-items-stretch">
			<div class="img order-md-2" style="background-image: url('@Model.About.ImageUrl1')" data-aos="fade-in">
			</div>
			<div class="text">
				<h2 class="heading text-primary mb-3">Neler yapıyoruz?</h2>
				<p class="mb-4">@Model.About.Description2</p>
				<p><a href="#" class="btn btn-outline-primary py-2">Devamını Oku</a></p>
			</div>
		</div>
	</div>
</div>
<div class="section">
	<div class="container">

		<div class="row mb-5">
			<div class="col-lg-5 mx-auto text-center" data-aos="fade-up">
				<h2 class="heading text-primary">Ekip Arkadaşlarımız</h2>
				<p>@Model.About.SubTitle</p>
			</div>
		</div>

		<div class="row">
			@foreach (var item in Model.Team)
			{
				<div class="col-lg-4 mb-4 text-center" data-aos="fade-up" data-aos-delay="0">
					<a href="/About/WriterDetails/@item.Id">
						<img src="@item.ImageUrl" alt="Image" class="img-fluid w-50 rounded-circle mb-3" />
					</a>
					<h5 class="text-black">@item.FullName</h5>
				</div>

			}		
		</div>

	</div>
</div>


<div class="modal fade" id="aiAboutModal" tabindex="-1">
	<div class="modal-dialog modal-lg modal-dialog-centered">
		<div class="modal-content shadow-lg border-0 rounded-4" style="overflow:hidden;">

			<div class="modal-header border-0 bg-primary text-white">
				<h5 class="modal-title fw-bold">🤖 Yapay Zekâ ile Blogy</h5>
				<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
			</div>

			<div class="modal-body p-4">

				<div id="ai-loading" class="text-center py-5">
					<div class="spinner-border text-primary" style="width:3rem;height:3rem;"></div>
					<p class="mt-4 fs-5 text-muted">İçerik oluşturuluyor...</p>
				</div>

				<div id="ai-result"
					 class="p-4 bg-light rounded-3 shadow-sm"
					 style="display:none; font-size:17px; line-height:1.7;">
				</div>

			</div>
		</div>
	</div>
</div>


<script>
    function confirmDelete(urlWithId) {
        Swal.fire({
            title: "Silmek istediğinizden emin misiniz?",
            text: "Bu işlem geri alınamaz!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = urlWithId;
            }
        });
    }
</script>
<script>
    $(document).ready(function () {

        $.get("/Admin/Dashboard/GetCategoryChart", function (data) {

            var names = data.map(x => x.categoryName);
            var counts = data.map(x => x.count);

            new ApexCharts(document.querySelector("#categoryChart"), {
                chart: { type: 'bar', height: 350 },
                series: [{ name: "Blog Sayısı", data: counts }],
                xaxis: { categories: names }
            }).render();
        });

        $.get("/Admin/Dashboard/GetStatusChart", function (data) {

            var labels = data.map(x => x.status);
            var values = data.map(x => x.count);

            new ApexCharts(document.querySelector("#statusChart"), {
                chart: { type: 'donut', height: 300 },
                labels: labels,
                series: values
            }).render();
        });

    });
</script>
<script>
 
    document.addEventListener("DOMContentLoaded", function () {

        const form = document.querySelector("form");

        if (form) {
            form.addEventListener("submit", function () {

                document.getElementById("ai-loading").style.display = "block";
            });
        }

    });

 
    function copyBlog() {
        var text = document.getElementById("blogText").innerText;
        navigator.clipboard.writeText(text);

        const btn = event.target.closest("button");
        btn.innerHTML = "<i class='bi bi-check-lg'></i> Kopyalandı!";
        btn.classList.add("btn-success");

        setTimeout(() => {
            btn.innerHTML = "<i class='bi bi-clipboard'></i> Kopyala";
            btn.classList.remove("btn-success");
        }, 2000);
    }
</script>
<script>
    document.getElementById("newPassword").addEventListener("input", function () {
        var val = this.value.length;
        var bar = document.getElementById('passwordStrength');

        if (val === 0) {
            bar.style.width = "0%";
            bar.className = "progress-bar";
        }
        else if (val < 4) {
            bar.style.width = "25%";
            bar.className = "progress-bar bg-danger";
        }
        else if (val < 7) {
            bar.style.width = "55%";
            bar.className = "progress-bar bg-warning";
        }
        else {
            bar.style.width = "100%";
            bar.className = "progress-bar bg-success";
        }
    });
</script>






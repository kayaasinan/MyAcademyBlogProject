@*
     Default Index Home Page Blogs Component
*@
@model List<ResultBlogDto>

<section class="section bg-light">
    <div class="container">
        <div class="row align-items-stretch retro-layout">

            <div class="col-md-4">
                @for (int i = 0; i < 2 && i < Model.Count; i++)
                {
                    <a href="/Blog/BlogDetails/@Model[i].Id"
                       class="h-entry mb-30 v-height gradient">

                        <div class="featured-img"
                             style="background-image: url('@Model[i].CoverImage'); width:100%; height:220px;">
                        </div>

                        <div class="text">
                            <span class="date">@Model[i].CreatedDate.ToShortDateString()</span>
                            <h2>@Model[i].Title</h2>
                        </div>
                    </a>
                }
            </div>

            <div class="col-md-4">
                @if (Model.Count >= 3)
                {
                    <a href="/Blog/BlogDetails/@Model[2].Id"
                       class="h-entry img-5 h-100 gradient">

                        <div class="featured-img"
                             style="background-image: url('@Model[2].CoverImage'); width:100%; height:450px;">
                        </div>

                        <div class="text">
                            <span class="date">@Model[2].CreatedDate.ToShortDateString()</span>
                            <h2>@Model[2].Title</h2>
                        </div>
                    </a>
                }
            </div>

            <div class="col-md-4">
                @for (int i = 3; i < 5 && i < Model.Count; i++)
                {
                    <a href="/Blog/BlogDetails/@Model[i].Id"
                       class="h-entry mb-30 v-height gradient">

                        <div class="featured-img"
                             style="background-image: url('@Model[i].CoverImage');width:100%; height:220px;">
                        </div>

                        <div class="text">
                            <span class="date">@Model[i].CreatedDate.ToShortDateString()</span>
                            <h2>@Model[i].Title</h2>
                        </div>
                    </a>
                }
            </div>

        </div>
    </div>
</section>

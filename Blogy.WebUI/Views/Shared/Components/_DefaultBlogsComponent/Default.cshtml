@model List<ResultCategoryDto>
@*
    Default Index Blogs Component
*@

@foreach (var category in Model)
{
    <section class="section">
        <div class="container">

            <div class="row mb-4">
                <div class="col-sm-6">
                    <h2 class="posts-entry-title">@category.CategoryName</h2>
                </div>
                <div class="col-sm-6 text-sm-end">
                    <a href="/Blog/GetBlogsByCategory/@category.Id" class="read-more">Tümünü Gör</a>
                </div>
            </div>

            <div class="row">
                @foreach (var blogs in category.Blogs)
                {
                    <div class="col-lg-4 mb-4">
                        <div class="post-entry-alt">
                            <a href="single.html" class="img-link">
                                <img src="@blogs.CoverImage" style="width:470px; height:225px" alt="Image" class="img-fluid" />
                            </a>
                            <div class="excerpt">
                                <h2><a href="single.html">@blogs.Title</a></h2>
                                <div class="post-meta align-items-center text-left clearfix">
                                    <figure class="author-figure mb-0 me-3 float-start">
                                        <img src="@blogs.Writer.ImageUrl" alt="Image" class="img-fluid" />
                                    </figure>
                                    <span class="d-inline-block mt-1"><a href="#">@blogs.Writer.FullName</a></span>
                                    <span>&nbsp;-&nbsp; @blogs.CreatedDate.ToShortDateString()</span>
                                </div>

                                <p>
                                    @(blogs.Description?.Length > 100
                                        ? blogs.Description.Substring(0, 100) + "..."
                                        : blogs.Description)
                                </p>
                        <p><a href="/Blog/BlogDetails/@blogs.Id" class="read-more">Devamını Oku</a></p>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </section>
}


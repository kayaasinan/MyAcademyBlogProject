@model RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">

    <title>Blogy – Kayıt Ol</title>

    <link rel="stylesheet" href="~/Spike-Bootstrap-1.0.0/src/assets/css/styles.min.css" />
    <link rel="stylesheet" href="~/css/register-custom.css" />
</head>

<body class="register-body">

    <div class="register-wrapper">

        <div class="register-left">
            <div class="blob-r1"></div>
            <div class="blob-r2"></div>
        </div>

        <div class="register-right">
            <div class="register-card">

                <h2 class="register-title">Kayıt Ol</h2>
                <p class="register-sub">Yeni hesabınızı oluşturun.</p>

                <form method="post">

                    <div class="form-row">
                        <div>
                            <label class="form-label">Adınız</label>
                            <input asp-for="FirstName" class="form-control reg-input" />
                        </div>

                        <div>
                            <label class="form-label">Soyadınız</label>
                            <input asp-for="LastName" class="form-control reg-input" />
                        </div>
                    </div>

                    <label class="form-label mt-2">Kullanıcı Adı</label>
                    <input asp-for="UserName" class="form-control reg-input" />

                    <label class="form-label mt-2">Email</label>
                    <input asp-for="Email" class="form-control reg-input" />

                    <label class="form-label mt-2">Şifre</label>
                    <input asp-for="Password" type="password" class="form-control reg-input" />

                    <label class="form-label mt-2">Tekrar Şifre</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control reg-input" />

                    <span class="text-danger mt-2 d-block">@Html.ValidationSummary()</span>

                    <button class="btn reg-btn w-100 mt-3">Kayıt Ol</button>

                    <div class="register-footer">
                        Zaten hesabınız var mı?
                        <a href="/Login/Index">Giriş Yap</a>
                    </div>

                </form>

            </div>
        </div>

    </div>

</body>
</html>
